<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    tools:context=".ui.home.MainFragment">

    <LinearLayout
        android:id="@+id/llToolbarHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_toolbar"
        android:gravity="center"
        android:minHeight="@dimen/height_toolbar_home"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_all"
            android:layout_weight="1"
            android:background="@drawable/bg_border_search_home"
            android:drawableStart="@drawable/ic_search_home"
            android:drawablePadding="@dimen/margin_all"
            android:hint="@string/vl_hint_search_file"
            android:padding="@dimen/margin_small"
            android:textColor="@color/text_color_search_home"
            android:textColorHint="@color/text_color_search_home_hint"
            android:textSize="@dimen/text_size_sp12" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_crown" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/color_bg_menu"
        android:theme="@style/MyBottomNavigationView"
        app:itemTextColor="@color/bottom_nav_color_text"
        app:itemTextAppearanceActive="@style/BottomNavigationView.Active"
        app:itemTextAppearanceInactive="@style/BottomNavigationView"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation_bottom" />

    <FrameLayout
        android:id="@+id/fm_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/navigation_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llToolbarHome" />
</androidx.constraintlayout.widget.ConstraintLayout>