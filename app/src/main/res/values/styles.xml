    <style name="AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/text_size_menu_home</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">#FFCC66</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/color_white</item>
    </style>

    <style name="Style_Tab_Layout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/rgb_F44336</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorHeight">@dimen/dp2</item>
        <item name="tabTextAppearance">@style/Text_All_Caps_False</item>
    </style>

